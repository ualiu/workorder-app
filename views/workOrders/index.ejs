<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Work Orders</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous">
</head>
<body>
  <div class="container mt-5">
    <h1>Work Orders for <%= customer.name %></h1>
    <h2>There are <%= numOrders %> WorkOrders associated with this customer</h2>

    <table class="table">
      <thead>
        <tr>
          <th>Work order number</th>
          <th>Description</th>
          <th>Status</th>
          <th>Technician</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% workOrders.forEach(workOrder => { %>
          <tr>
            <td><%= workOrder.workOrderNumber %></td>
            <td><%= workOrder.description %></td>
            <td><%= workOrder.status %></td>
            <td><%= workOrder.technician %></td>
            <td><%= moment(workOrder.createdAt).format('MMM D, YYYY') %></td>
            <td>
              <a href="/api/workOrders/<%= workOrder._id %>" class="btn btn-primary btn-sm me-2"><i class="fas fa-eye"></i> View</a>
              <a href="/api/workOrders/<%= workOrder._id %>/edit" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="mt-4">
      <a href="/api/workOrders/customers/<%= customer._id %>/new" class="btn btn-success me-2"><i class="fas fa-plus"></i> Add new work order</a>
      <a href="/api/customers" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Return to Customers Page</a>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.2/js/bootstrap.bundle.min.js" integrity="sha512-9fDnDEZlqUSn8GOUWfPsxmAujwYQHTFv7FlRkW9Xz/aNlO6UBAvNl2N25jSWfzgUxdDwUHrlrjK/6nnXm6myng==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body
